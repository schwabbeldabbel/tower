<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Label?>
<?import com.jfoenix.controls.JFXButton?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.towerdef.controller.GameViewController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../css/style.css, @../css/game.css"
            styleClass="centered">
    <top>
        <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0"
                  GridPane.columnSpan="10" GridPane.rowSpan="1" vgap="30">
            <columnConstraints>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
                <ColumnConstraints minWidth="20"/>
            </columnConstraints>
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="1" GridPane.rowSpan="1" fx:id="timer" styleClass="timer"/>
            <JFXButton GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#setSpeed" fx:id="SLOW"
                       GridPane.columnSpan="1" GridPane.rowSpan="1">Slow
            </JFXButton>
            <JFXButton GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#setSpeed" fx:id="NORMAL"
                       GridPane.columnSpan="1" GridPane.rowSpan="1">Normal
            </JFXButton>
            <JFXButton GridPane.columnIndex="3" GridPane.rowIndex="0" onAction="#setSpeed" fx:id="FAST"
                       GridPane.columnSpan="1" GridPane.rowSpan="1">Fast
            </JFXButton>
        </GridPane>
    </top>
    <right>
        <HBox>
            <JFXButton onAction="#backToStart">Zur√ºck zum Start</JFXButton>
            <JFXButton fx:id="statsBtn" onAction="#showStats" disable="true">
                Weiter zu der Statistik
            </JFXButton>
        </HBox>
    </right>
    <center>
        <GridPane fx:id="root">
            <columnConstraints>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
                <ColumnConstraints minWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="100"/>
                <RowConstraints minHeight="100"/>
                <RowConstraints minHeight="100"/>
                <RowConstraints minHeight="100"/>
                <RowConstraints minHeight="100"/>
                <RowConstraints minHeight="100"/>
                <RowConstraints minHeight="100"/>
            </rowConstraints>
            <Label fx:id="winningLabel" styleClass="endLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2"
                   GridPane.columnSpan="8"/>
            <JFXButton fx:id="humanPos1" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.columnSpan="1"
                       GridPane.rowSpan="2"
                       minHeight="200" maxHeight="200" maxWidth="100" minWidth="100"/>
            <JFXButton fx:id="towerPos" GridPane.columnIndex="7" GridPane.rowIndex="1"
                       GridPane.columnSpan="2" GridPane.rowSpan="5"/>
            <JFXButton fx:id="humanPos2" GridPane.columnIndex="1" GridPane.rowIndex="3"
                       GridPane.columnSpan="1" GridPane.rowSpan="2"
                       minHeight="200" maxHeight="200" maxWidth="100" minWidth="100"/>
            <JFXButton GridPane.columnIndex="2" GridPane.rowIndex="4"
                       GridPane.columnSpan="1" GridPane.rowSpan="1"
                       styleClass="barrel"/>
            <JFXButton fx:id="humanPos3" GridPane.columnIndex="4" GridPane.rowIndex="4" GridPane.columnSpan="1"
                       GridPane.rowSpan="2"
                       minHeight="200" maxHeight="200" maxWidth="100" minWidth="100"/>
        </GridPane>

    </center>


</BorderPane>
